<h1>Create a new post </h1>

<%= form_with model: @post do |form| %>
    <div>
        <%= form.label :title %><br />
        <%= form.text_field :title %>
    </div>

    <div>
        <%= form.label :body %> <br />
        <%= form.text_area :body %>
    </div>

    <div>
        <%= form.submit "Create post" %>
    </div>
<% end %>